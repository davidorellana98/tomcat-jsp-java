<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <display-name>gerenciador</display-name>
    <welcome-file-list>
        <welcome-file>bienvenido.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>HolaMundoServlet</servlet-name>
        <servlet-class>com.alura.one.gerenciador.HolaMundoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HolaMundoServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NuevaEmpresaServlet</servlet-name>
        <servlet-class>com.alura.one.gerenciador.NuevaEmpresaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NuevaEmpresaServlet</servlet-name>
        <url-pattern>/nuevaEmpresa</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListaEmpresasServlet</servlet-name>
        <servlet-class>com.alura.one.gerenciador.ListaEmpresasServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListaEmpresasServlet</servlet-name>
        <url-pattern>/listaEmpresas</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EliminarEmpresaServlet</servlet-name>
        <servlet-class>com.alura.one.gerenciador.EliminarEmpresaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EliminarEmpresaServlet</servlet-name>
        <url-pattern>/eliminarEmpresa</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MostrarEmpresaServlet</servlet-name>
        <servlet-class>com.alura.one.gerenciador.MostrarEmpresaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MostrarEmpresaServlet</servlet-name>
        <url-pattern>/mostrarEmpresa</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ModificarEmpresaServlet</servlet-name>
        <servlet-class>com.alura.one.gerenciador.ModificarEmpresaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModificarEmpresaServlet</servlet-name>
        <url-pattern>/modificarEmpresa</url-pattern>
    </servlet-mapping>
</web-app>